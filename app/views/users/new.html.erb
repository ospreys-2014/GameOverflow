<h3>Sign Up</h3>
<%= form_for(@user) do |f| %>
  <%# Two-space indents, always. %>
  <p>
  <%= f.label :handle %><br>
  <%= f.text_field :handle %>
  </p>
  <p>
  <%= f.label :email %><br>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label :confirm_password %><br>
  <%= f.password_field :password_confirmation %>
  </p>
  <%= f.submit "Sign Up" %>
<% end %>
